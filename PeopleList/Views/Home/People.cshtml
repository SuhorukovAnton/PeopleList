@model PeopleList.Models.People
@{
    Layout = null;
    PeopleList.Models.People people = new PeopleList.Models.People();
}

@if (Html.DisplayText("Img").ToString() == "")
{
    if (ViewData["canEdit"].ToString() == "True")
    {
        using (Ajax.BeginForm("LoadImg", null, new AjaxOptions { UpdateTargetId = "main-block" }, new { enctype = "multipart/form-data" }))
        {
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="img" id="file" multiple accept="image/*" required>
                <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                <div class="invalid-feedback">Example invalid custom file feedback</div>
            </div>
            <br>
            <br>
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Загрузить изображение" />
        }
    }
}
else
{
    <img src="~/files/imgs/@Html.DisplayText("Img")" width="200" height="200" class="rounded mx-auto d-block" alt="...">
}
@if (ViewData["canEdit"].ToString() == "True")
{
    using (Ajax.BeginForm("Edit", new AjaxOptions { UpdateTargetId = "result" }))
    {
        <br>
        <input class="form-control" type="text" name="name" placeholder="Имя" required value="@Html.DisplayText("Name")" />
        <br>
        <input class="form-control" type="text" name="surname" placeholder="Фамилия" required value="@Html.DisplayText("Surname")" />
        <br>
        <input class="form-control" type="email" name="email" placeholder="Почта" required value="@Html.DisplayText("Email")" />
        <br>
        <input class="form-control" type="date" name="birthday" required placeholder="Дата рождения" value="@Html.DisplayText("Birthday")" />
        <br>
        <button class="btn btn-lg btn-primary btn-block" id="Edit" type="submit">Изменить</button>
        <br>
    }
}
else
{
    <br>
    <ul class="list-group">
        <li class="list-group-item">@Html.DisplayText("Name")</li>
        <li class="list-group-item">@Html.DisplayText("Surname")</li>
        <li class="list-group-item">@Html.DisplayText("Email")</li>
        <li class="list-group-item">@Html.DisplayText("Birthday")</li>
    </ul>
    <br>
}
@using (Ajax.BeginForm("MainForm", new AjaxOptions { UpdateTargetId = "main-block" }))
{
    <button class="btn btn-lg btn-primary btn-block" id="Back" type="submit">Назад</button>
}
<br>
<span id="result"></span>



