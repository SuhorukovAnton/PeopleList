<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="container col-lg-3 mt-5">
        @using (Ajax.BeginForm("Add", new AjaxOptions { UpdateTargetId = "result" }))
        {
            <input class="form-control" type="text" name="name" placeholder="Имя" required/>
            <br>
            <input class="form-control" type="text" name="surname" placeholder="Фамилия" required/>
            <br>
            <button class="btn btn-lg btn-primary btn-block" id="Add" type="submit">Добавить</button>
            <br>
        }
        <h3>Список добавленных людей</h3>

        <ol id="result">
            @RenderBody()
        </ol>

    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
</body>
</html>
